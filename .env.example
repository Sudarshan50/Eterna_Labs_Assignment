# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# MongoDB Atlas URI
MONGO_URI=mongodb+srv://username:password@cluster.example.mongodb.net/?retryWrites=true&w=majority&appName=your-app

# Redis Configuration
REDIS_DB_HOST=localhost
REDIS_DB_PORT=6379
REDIS_DB_PASS=

# Cache Configuration (in seconds)
# Increased to 5 minutes (300s) for better fault tolerance
CACHE_TTL=300

# Scheduler Configuration (in seconds)
# How often to fetch fresh data from APIs
# Recommended: 120 seconds (2 minutes) to avoid rate limits
UPDATE_INTERVAL=120
